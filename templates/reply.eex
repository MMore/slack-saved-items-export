<div class="flex-1 border-dotted border-2">
  <div class="flex flex-wrap">
    <%= if show_profile_image? do %>
      <img src="<%= reply.user.image_24 %>" class="mr-1" />
    <% end %>
    <div class="font-bold tracking-wide">
      <span title="<%= reply.user.title %>"><%= reply.user.real_name %></span>
    </div>
    <div class="font-light text-gray-500 ml-3">
      <%= reply.date_created %>
    </div>
  </div>
  <div class="italic">
    <%= reply.text %>
  </div>
</div>
